{
  "manifest_version": 3,
  "name": "AI File Manager",
  "version": "1.0.0",
  "description": "AI-powered file management assistant",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "http://127.0.0.1:3000/*",
    "http://localhost:3000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
