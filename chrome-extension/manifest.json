{
  "manifest_version": 3,
  "name": "AI Code Editor",
  "version": "1.0",
  "description": "AI-powered code editing within Chrome",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "unlimitedStorage"  
  ],
  "host_permissions": [
    "http://localhost:3000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AI Code Editor"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}